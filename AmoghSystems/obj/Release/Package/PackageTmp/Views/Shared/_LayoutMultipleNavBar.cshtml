
@using Microsoft.AspNet.Identity

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Prodigy Consulting</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    
        <nav class="navbar navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">Prodigy Consulting</a>
                </div> <!-- End of navbar-header-->

                <div class="collapse navbar-collapse navbar-inverse navbar-ex1-collapse">
                    <ul class="nav navbar-nav navbar-right ">

                        @if (Request.IsAuthenticated)
                        {
                            using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                            {
                                @Html.AntiForgeryToken()
                                <li>
                                    <a href="#">Call: +1-425-272-5341</a>
                                </li>
                                <li>
                                    @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Manage", "Account", routeValues: null, htmlAttributes: new { title = "Manage" })
                                </li>
                                <li>
                                    <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
                                </li>
                            }
                        }
                        else
                        {
                            <li>
                                <a href="#">Call: +1-425-272-5341</a>
                            </li>
                            <li>
                                @Html.ActionLink("Sign up", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })
                            </li>
                            <li>
                                @Html.ActionLink("Sign in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
                            </li>
                        }
                    </ul>
                </div> <!-- End of navbar-ex1-collapse-->
        </div>    
        </nav>
    
        <div class="container">
            <div class="navbar-header left">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex2-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>

                <div class="collapse navbar-default navbar-collapse navbar-ex2-collapse">
                    <ul class="nav navbar-nav navbar-left">
                        <li class="active"><a href="#">Home</a> </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Consulting<b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li><a href="#">Web</a></li>
                                <li><a href="#">Cloud</a></li>
                                <li><a href="#">Mobile</a></li>
                                <li> <a href="#">Enterprise Architecture</a></li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Products<b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li><a href="#">e-Commerce</a></li>
                                <li><a href="#">e-Invocing</a></li>
                                <li><a href="#">e-TimeTracking</a></li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Training<b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li><a href="#">IT Training</a></li>
                                <li><a href="#">Agile</a></li>
                                <li><a href="#">Architecture</a></li>
                            </ul>
                        </li>
                        <li><a href="#">About</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="#">Blog</a></li>
                        <li><a href="#">Contact Us</a></li>
                    </ul>
                </div>  <!-- End of navbar-ex2-collapse -->
            </div>        
    
    
   <div class="container body-content">
        @RenderBody()
        <hr />
     <footer>
        <div class="container">
            <div class="row">
                <div class="col-sm-4">
                    <p>&copy; @DateTime.Now.Year - Amogh Systems, LLC</p>
                </div>
                <div class="col-sm-2">
                    <a href="#">Privacy Policy</a>
                </div>
                <div class="col-sm-2">
                    <a href="#">Twitter</a>
                </div>
                <div class="col-sm-2">
                    <a href="#">Facebook</a>
                </div>
                <div class="col-sm-2">
                    <a href="#">LinkedIn</a>
                </div>
            </div>
        </div>

    </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>