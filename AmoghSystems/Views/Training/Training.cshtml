@using DataAccessLayer
@model AmoghSystems.Models.TrainingCategoryOverview

@{
    ViewBag.Title = "Prodigy Consulting - IT training, Agile methodology training and Software Architecture training";
}

@section MetaDataContent{
    <meta content="text/html; charset=utf-8" http-equiv="Content-Type" />
    <meta name="description" content="TheProdigyConsulting.com - IT, Agile and Software Architecture Training" />
    <meta name="keywords" content="IT Training, Agile Training, Software Architecture Training" />
    <meta name="author" content="Babu Govindarajan" />
}

<div class="row container">
    <div class="col-md-12">
        @foreach (KeyValuePair<DataAccessLayer.TrainingSubjectCategory,
        List<DataAccessLayer.TrainingSubject>> trainingSubjectCategory in Model.TrainingCategoryOverviewData)
        {
            DataAccessLayer.TrainingSubjectCategory tsc = trainingSubjectCategory.Key;
            List<DataAccessLayer.TrainingSubject> trainingSubjects = trainingSubjectCategory.Value;

            <div class="col-md-6">
                <div class="panel-primary">
                    <div class="panel-heading">
                        <h4 class="panel-title">@tsc.Description</h4>
                    </div>
                    @foreach (DataAccessLayer.TrainingSubject ts in trainingSubjects)
                    {
                            <div>
                                <a class="btn" href="~/Training/TrainingDetails/@tsc.TrainingSubjectCategoryID/@ts.TrainingSubjectID">                                
                                    @ts.SubjectName                                
                                </a>
                            </div>
                            <br />
                    }
                    </div>
                </div>
        }
    </div>                
</div>